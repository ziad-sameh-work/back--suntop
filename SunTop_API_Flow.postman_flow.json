{
	"info": {
		"name": "SunTop API Complete Testing Flow",
		"description": "Automated testing flow for all SunTop API endpoints",
		"schema": "https://schema.getpostman.com/json/flow/v1.0.0/flow.json"
	},
	"item": [
		{
			"id": "start",
			"type": "start",
			"name": "Start Testing Flow",
			"position": {
				"x": 100,
				"y": 100
			}
		},
		{
			"id": "setup-environment",
			"type": "request",
			"name": "Setup Environment Variables",
			"position": {
				"x": 300,
				"y": 100
			},
			"request": {
				"method": "GET",
				"url": "{{base_url}}/api/health",
				"header": [
					{
						"key": "Accept",
						"value": "application/json"
					}
				]
			},
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// Setup default test data",
							"pm.environment.set('test_username', 'testuser');",
							"pm.environment.set('test_password', 'password123');",
							"pm.environment.set('test_product_id', '1');",
							"pm.environment.set('test_merchant_id', '1');",
							"",
							"console.log('Environment setup completed');"
						],
						"type": "text/javascript"
					}
				}
			]
		},
		{
			"id": "auth-login",
			"type": "request",
			"name": "🔐 Login User",
			"position": {
				"x": 500,
				"y": 100
			},
			"request": {
				"method": "POST",
				"url": "{{base_url}}/api/auth/login",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "Accept",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"username\": \"{{test_username}}\",\n    \"password\": \"{{test_password}}\"\n}"
				}
			},
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test('Login successful', function () {",
							"    pm.response.to.have.status(200);",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.success).to.eql(true);",
							"    pm.environment.set('access_token', jsonData.data.access_token);",
							"    pm.environment.set('refresh_token', jsonData.data.refresh_token);",
							"    pm.environment.set('user_id', jsonData.data.user.id);",
							"});",
							"",
							"if (pm.response.code !== 200) {",
							"    postman.setNextRequest('end-flow');",
							"}"
						],
						"type": "text/javascript"
					}
				}
			]
		},
		{
			"id": "auth-profile",
			"type": "request",
			"name": "👤 Get User Profile",
			"position": {
				"x": 700,
				"y": 100
			},
			"request": {
				"method": "GET",
				"url": "{{base_url}}/api/auth/profile",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{access_token}}"
					},
					{
						"key": "Accept",
						"value": "application/json"
					}
				]
			},
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test('Profile retrieved successfully', function () {",
							"    pm.response.to.have.status(200);",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.success).to.eql(true);",
							"    pm.expect(jsonData.data).to.have.property('username');",
							"});"
						],
						"type": "text/javascript"
					}
				}
			]
		},
		{
			"id": "products-list",
			"type": "request",
			"name": "🛍️ Get All Products",
			"position": {
				"x": 100,
				"y": 300
			},
			"request": {
				"method": "GET",
				"url": "{{base_url}}/api/products",
				"header": [
					{
						"key": "Accept",
						"value": "application/json"
					}
				]
			},
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test('Products retrieved successfully', function () {",
							"    pm.response.to.have.status(200);",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.success).to.eql(true);",
							"    pm.expect(jsonData.data.products).to.be.an('array');",
							"    if(jsonData.data.products.length > 0) {",
							"        pm.environment.set('product_id', jsonData.data.products[0].id);",
							"    }",
							"});"
						],
						"type": "text/javascript"
					}
				}
			]
		},
		{
			"id": "products-featured",
			"type": "request",
			"name": "⭐ Get Featured Products",
			"position": {
				"x": 300,
				"y": 300
			},
			"request": {
				"method": "GET",
				"url": "{{base_url}}/api/products/featured",
				"header": [
					{
						"key": "Accept",
						"value": "application/json"
					}
				]
			},
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test('Featured products retrieved successfully', function () {",
							"    pm.response.to.have.status(200);",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.success).to.eql(true);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			]
		},
		{
			"id": "products-categories",
			"type": "request",
			"name": "📂 Get Categories",
			"position": {
				"x": 500,
				"y": 300
			},
			"request": {
				"method": "GET",
				"url": "{{base_url}}/api/products/categories",
				"header": [
					{
						"key": "Accept",
						"value": "application/json"
					}
				]
			},
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test('Categories retrieved successfully', function () {",
							"    pm.response.to.have.status(200);",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.success).to.eql(true);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			]
		},
		{
			"id": "products-search",
			"type": "request",
			"name": "🔍 Search Products",
			"position": {
				"x": 700,
				"y": 300
			},
			"request": {
				"method": "GET",
				"url": "{{base_url}}/api/products/search?q=سن توب",
				"header": [
					{
						"key": "Accept",
						"value": "application/json"
					}
				]
			},
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test('Search completed successfully', function () {",
							"    pm.response.to.have.status(200);",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.success).to.eql(true);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			]
		},
		{
			"id": "products-details",
			"type": "request",
			"name": "📋 Get Product Details",
			"position": {
				"x": 900,
				"y": 300
			},
			"request": {
				"method": "GET",
				"url": "{{base_url}}/api/products/{{product_id}}",
				"header": [
					{
						"key": "Accept",
						"value": "application/json"
					}
				]
			},
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test('Product details retrieved successfully', function () {",
							"    pm.response.to.have.status(200);",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.success).to.eql(true);",
							"    pm.expect(jsonData.data).to.have.property('id');",
							"});"
						],
						"type": "text/javascript"
					}
				}
			]
		},
		{
			"id": "orders-create",
			"type": "request",
			"name": "🛒 Create New Order",
			"position": {
				"x": 100,
				"y": 500
			},
			"request": {
				"method": "POST",
				"url": "{{base_url}}/api/orders",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{access_token}}"
					},
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "Accept",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"merchant_id\": \"{{test_merchant_id}}\",\n    \"items\": [\n        {\n            \"product_id\": \"{{product_id}}\",\n            \"quantity\": 2,\n            \"unit_price\": 2.50\n        }\n    ],\n    \"delivery_address\": {\n        \"street\": \"شارع النيل\",\n        \"building\": \"رقم 15\",\n        \"apartment\": \"شقة 3\",\n        \"city\": \"القاهرة\",\n        \"district\": \"المعادي\",\n        \"postal_code\": \"11728\",\n        \"phone\": \"+20 109 999 9999\",\n        \"notes\": \"الدور الثاني\"\n    },\n    \"payment_method\": \"cash_on_delivery\"\n}"
				}
			},
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test('Order created successfully', function () {",
							"    pm.response.to.have.status(201);",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.success).to.eql(true);",
							"    pm.environment.set('order_id', jsonData.data.order.id);",
							"    pm.environment.set('tracking_number', jsonData.data.order.tracking_number);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			]
		},
		{
			"id": "orders-list",
			"type": "request",
			"name": "📋 Get User Orders",
			"position": {
				"x": 300,
				"y": 500
			},
			"request": {
				"method": "GET",
				"url": "{{base_url}}/api/orders",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{access_token}}"
					},
					{
						"key": "Accept",
						"value": "application/json"
					}
				]
			},
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test('Orders retrieved successfully', function () {",
							"    pm.response.to.have.status(200);",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.success).to.eql(true);",
							"    pm.expect(jsonData.data.orders).to.be.an('array');",
							"});"
						],
						"type": "text/javascript"
					}
				}
			]
		},
		{
			"id": "orders-details",
			"type": "request",
			"name": "🔍 Get Order Details",
			"position": {
				"x": 500,
				"y": 500
			},
			"request": {
				"method": "GET",
				"url": "{{base_url}}/api/orders/{{order_id}}",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{access_token}}"
					},
					{
						"key": "Accept",
						"value": "application/json"
					}
				]
			},
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test('Order details retrieved successfully', function () {",
							"    pm.response.to.have.status(200);",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.success).to.eql(true);",
							"    pm.expect(jsonData.data).to.have.property('items');",
							"});"
						],
						"type": "text/javascript"
					}
				}
			]
		},
		{
			"id": "orders-tracking",
			"type": "request",
			"name": "📍 Track Order",
			"position": {
				"x": 700,
				"y": 500
			},
			"request": {
				"method": "GET",
				"url": "{{base_url}}/api/orders/{{order_id}}/tracking",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{access_token}}"
					},
					{
						"key": "Accept",
						"value": "application/json"
					}
				]
			},
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test('Order tracking retrieved successfully', function () {",
							"    pm.response.to.have.status(200);",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.success).to.eql(true);",
							"    pm.expect(jsonData.data).to.have.property('tracking_history');",
							"});"
						],
						"type": "text/javascript"
					}
				}
			]
		},
		{
			"id": "orders-reorder",
			"type": "request",
			"name": "🔄 Reorder",
			"position": {
				"x": 900,
				"y": 500
			},
			"request": {
				"method": "POST",
				"url": "{{base_url}}/api/orders/{{order_id}}/reorder",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{access_token}}"
					},
					{
						"key": "Accept",
						"value": "application/json"
					}
				]
			},
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test('Reorder successful', function () {",
							"    pm.response.to.have.status(201);",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.success).to.eql(true);",
							"    pm.environment.set('reorder_id', jsonData.data.order.id);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			]
		},
		{
			"id": "error-tests",
			"type": "request",
			"name": "🚨 Error Handling Tests",
			"position": {
				"x": 100,
				"y": 700
			},
			"request": {
				"method": "GET",
				"url": "{{base_url}}/api/products/999999",
				"header": [
					{
						"key": "Accept",
						"value": "application/json"
					}
				]
			},
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test('404 Error handled correctly', function () {",
							"    pm.response.to.have.status(404);",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.success).to.eql(false);",
							"    pm.expect(jsonData.error).to.have.property('message');",
							"});"
						],
						"type": "text/javascript"
					}
				}
			]
		},
		{
			"id": "auth-logout",
			"type": "request",
			"name": "🚪 Logout User",
			"position": {
				"x": 300,
				"y": 700
			},
			"request": {
				"method": "POST",
				"url": "{{base_url}}/api/auth/logout",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{access_token}}"
					},
					{
						"key": "Accept",
						"value": "application/json"
					}
				]
			},
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test('Logout successful', function () {",
							"    pm.response.to.have.status(200);",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.success).to.eql(true);",
							"});",
							"",
							"// Clear tokens",
							"pm.environment.unset('access_token');",
							"pm.environment.unset('refresh_token');"
						],
						"type": "text/javascript"
					}
				}
			]
		},
		{
			"id": "end-flow",
			"type": "end",
			"name": "End Testing Flow ✅",
			"position": {
				"x": 500,
				"y": 700
			},
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"console.log('🎉 SunTop API Testing Flow Completed Successfully!');",
							"console.log('📊 All endpoints tested and validated');",
							"console.log('✅ Ready for production deployment');"
						],
						"type": "text/javascript"
					}
				}
			]
		}
	],
	"connections": [
		{
			"from": "start",
			"to": "setup-environment"
		},
		{
			"from": "setup-environment",
			"to": "auth-login"
		},
		{
			"from": "auth-login",
			"to": "auth-profile"
		},
		{
			"from": "auth-profile",
			"to": "products-list"
		},
		{
			"from": "products-list",
			"to": "products-featured"
		},
		{
			"from": "products-featured",
			"to": "products-categories"
		},
		{
			"from": "products-categories",
			"to": "products-search"
		},
		{
			"from": "products-search",
			"to": "products-details"
		},
		{
			"from": "products-details",
			"to": "orders-create"
		},
		{
			"from": "orders-create",
			"to": "orders-list"
		},
		{
			"from": "orders-list",
			"to": "orders-details"
		},
		{
			"from": "orders-details",
			"to": "orders-tracking"
		},
		{
			"from": "orders-tracking",
			"to": "orders-reorder"
		},
		{
			"from": "orders-reorder",
			"to": "error-tests"
		},
		{
			"from": "error-tests",
			"to": "auth-logout"
		},
		{
			"from": "auth-logout",
			"to": "end-flow"
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://127.0.0.1:8000"
		}
	]
}
